{
    "version": "V1.0.0 build 200508",
    "resources": [
        {
            "identifier": "waterpurifier1",
            "title": "净水器资源",
            "resourceCategory": "global",
            "localIndex": [
                "1"
            ],
            "dynamic": false,
            "global": true,
            "domains": [
                {
                    "identifier": "WaterPurifier",
                    "title": "净水器领域",
                    "props": [
                        {
                            "identifier": "status",
                            "version": "v3.0",
                            "access": "rw",
                            "schema": {
                                "type": "string",
                                "title": "运行模式",
                                "description": "1: 标准模式 2:快速模式 3.超净模式",
                                "enum": [
                                    "1",
                                    "2",
                                    "3"
                                ]
                            }
                        },
                        {
                            "identifier": "power",
                            "version": "v3.0",
                            "access": "rw",
                            "schema": {
                                "type": "boolean",
                                "title": "制水开关",
                                "description": "制水开关, 用于停止制水"
                            }
                        }
                    ],
                    "actions": [
                        {
                            "identifier": "QueryWaterConsumption",
                            "version": "v3.0",
                            "direction": "Plt2Dev",
                            "input": {
                                "schema": {
                                    "type": "integer",
                                    "description": "天数"
                                }
                            },
                            "output": {
                                "schema": {
                                    "type": "object",
                                    "description": "返回用水量",
                                    "properties": {
                                        "days": {
                                            "type": "integer",
                                            "description": "天数"
                                        },
                                        "volume": {
                                            "type": "number",
                                            "description": "用水量"
                                        }
                                    }
                                }
                            }
                        },
                        {
                            "identifier": "GetImageUploadUrl",
                            "version": "v3.0",
                            "direction": "Dev2Plt",
                            "input": {
                                "schema": {
                                    "type": "string",
                                    "enum": [
                                        "http",
                                        "https"
                                    ]
                                }
                            },
                            "output": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "protocol": {
                                            "type": "string",
                                            "enum": [
                                                "http",
                                                "https"
                                            ]
                                        },
                                        "uploadUrl": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    ],
                    "events": [
                        {
                            "identifier": "MotionDetect",
                            "version": "v3.0",
                            "eventType": [
                                "notification"
                            ],
                            "input": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "basic": {
                                            "type": "object",
                                            "description": "事件基础信息，所有事件都必须携带，不允许接入设备删改",
                                            "properties": {
                                                "timestamp": {
                                                    "type": "string",
                                                    "description": "设备本地时间，本地时区，对应OSD时间，格式为 YYYY-MM-DD'T'HH:mm:ss",
                                                    "maxLength": 19,
                                                    "minLength": 19
                                                },
                                                "time": {
                                                    "type": "number",
                                                    "description": "消息时间戳，UTC 1970-01-01 0时开始的毫秒数"
                                                },
                                                "msgId": {
                                                    "type": "string",
                                                    "optional": 1,
                                                    "description": "消息的GUID，兼容原协议中的alarmId，B业务中需要此字段来标识消息",
                                                    "maxLength": 0,
                                                    "minLength": 64
                                                },
                                                "attachment": {
                                                    "type": "string",
                                                    "description": "新的附件数据描述，格式待定"
                                                }
                                            }
                                        },
                                        "notification": {
                                            "type": "object",
                                            "description": "提醒消息基础字段，所有提醒类消息都必须携带",
                                            "properties": {
                                                "relationId": {
                                                    "type": "string",
                                                    "optional": 1,
                                                    "description": "互联互通消息ID",
                                                    "maxLength": 0,
                                                    "minLength": 64
                                                },
                                                "status": {
                                                    "type": "number",
                                                    "optional": 1,
                                                    "description": "事件状态，1发生，2停止，该字段目前无实际效果，但予以保留",
                                                    "enum": [
                                                        1,
                                                        2
                                                    ]
                                                },
                                                "location": {
                                                    "type": "string",
                                                    "optional": 1,
                                                    "description": "设备安装位置附加信息"
                                                },
                                                "pictures": {
                                                    "type": "array",
                                                    "description": "报警图片，兼容旧协议",
                                                    "minItems": 0,
                                                    "maxItems": 16,
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "cloudtype": {
                                                                "type": "number",
                                                                "description": "云存储类型，根据图片上传信息响应中的同名字段填写 "
                                                            },
                                                            "bucket": {
                                                                "type": "string",
                                                                "description": "云存储bucket名称，根据图片上传信息响应中的同名字段填写"
                                                            },
                                                            "type": {
                                                                "type": "string",
                                                                "description": "图片格式"
                                                            },
                                                            "length": {
                                                                "type": "number",
                                                                "optional": 1,
                                                                "description": "图片长度"
                                                            },
                                                            "crypt": {
                                                                "type": "number",
                                                                "description": "加密类型，2平台加密，1设备加密，0不加密",
                                                                "enums": [
                                                                    0,
                                                                    1,
                                                                    2
                                                                ]
                                                            },
                                                            "fileid": {
                                                                "type": "string",
                                                                "description": "存储KEY,根据图片上传信息响应中的同名字段填写"
                                                            },
                                                            "tinyvideo": {
                                                                "type": "number",
                                                                "description": "0-没有报警小视频；1-有报警小视频 ",
                                                                "enums": [
                                                                    0,
                                                                    1
                                                                ]
                                                            },
                                                            "checksum": {
                                                                "type": "number",
                                                                "description": " 对应老协议CapturePicture:CheckSum "
                                                            },
                                                            "lifecycle": {
                                                                "type": "number",
                                                                "description": " 云图片的存储周期 ，根据图片上传信息响应中的同名字段填写 "
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "required": [
                                        "basic",
                                        "notification"
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}