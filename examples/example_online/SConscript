from building import *

cwd     = GetCurrentDir()

# src     = Glob('src/*.c')
# path    = [cwd + '/inc']
src     = Glob('*.c')
path    = []
defines = []

if GetDepend(['EZIOT_EXAMPLES_SDK_LOGLVL']):
    defines += ['CONFIG_EZIOT_EXAMPLES_SDK_LOGLVL=EZIOT_EXAMPLES_SDK_LOGLVL']
if GetDepend(['EZIOT_EXAMPLES_CLOUD_HOST']):
    defines += ['CONFIG_EZIOT_EXAMPLES_CLOUD_HOST=EZIOT_EXAMPLES_CLOUD_HOST']
if GetDepend(['EZIOT_EXAMPLES_CLOUD_PORT']):
    defines += ['CONFIG_EZIOT_EXAMPLES_CLOUD_PORT=EZIOT_EXAMPLES_CLOUD_PORT']
if GetDepend(['EZIOT_EXAMPLES_DEV_AUTH_MODE_SAP']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_AUTH_MODE_SAP=EZIOT_EXAMPLES_DEV_AUTH_MODE_SAP']
if GetDepend(['EZIOT_EXAMPLES_DEV_AUTH_MODE_LICENCE']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_AUTH_MODE_LICENCE=EZIOT_EXAMPLES_DEV_AUTH_MODE_LICENCE']
if GetDepend(['EZIOT_EXAMPLES_DEV_TYPE']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_TYPE=EZIOT_EXAMPLES_DEV_TYPE']
if GetDepend(['EZIOT_EXAMPLES_DEV_SERIAL_NUMBER']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_SERIAL_NUMBER=EZIOT_EXAMPLES_DEV_SERIAL_NUMBER']
if GetDepend(['EZIOT_EXAMPLES_DEV_VERIFICATION_CODE']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_VERIFICATION_CODE=EZIOT_EXAMPLES_DEV_VERIFICATION_CODE']
if GetDepend(['EZIOT_EXAMPLES_DEV_PRODUCT_KEY']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_PRODUCT_KEY=EZIOT_EXAMPLES_DEV_PRODUCT_KEY']
if GetDepend(['EZIOT_EXAMPLES_DEV_NAME']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_NAME=EZIOT_EXAMPLES_DEV_NAME']
if GetDepend(['EZIOT_EXAMPLES_DEV_LICENSE']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_LICENSE=EZIOT_EXAMPLES_DEV_LICENSE']
if GetDepend(['EZIOT_EXAMPLES_DEV_DISPLAY_NAME']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_DISPLAY_NAME=EZIOT_EXAMPLES_DEV_DISPLAY_NAME']
if GetDepend(['EZIOT_EXAMPLES_DEV_FIRMWARE_VERSION']):
    defines += ['CONFIG_EZIOT_EXAMPLES_DEV_FIRMWARE_VERSION=EZIOT_EXAMPLES_DEV_FIRMWARE_VERSION']
if GetDepend(['EZIOT_EXAMPLES_WIFI_SSID']):
    defines += ['CONFIG_EZIOT_EXAMPLES_WIFI_SSID=EZIOT_EXAMPLES_WIFI_SSID']
if GetDepend(['EZIOT_EXAMPLES_WIFI_PASSWORD']):
    defines += ['CONFIG_EZIOT_EXAMPLES_WIFI_PASSWORD=EZIOT_EXAMPLES_WIFI_PASSWORD']

group = DefineGroup('eziot_examples', src, depend = ['EZIOT_EXAMPLES_ENABLE'], CPPPATH = path, CPPDEFINES = defines)

Return('group')
